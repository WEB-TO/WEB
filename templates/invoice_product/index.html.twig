{% extends 'base.html.twig' %}

{% block title %}InvoiceProduct index{% endblock %}

{% block body %}
    <h1>InvoiceProduct index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Invoice Id</th>
                <th>Product Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for invoice_product in invoice_products %}
            <tr>
                <td>{{ invoice_product.id }}</td>
                <td>{{ invoice_product.Invoice.id }}</td>
                <td>{{ invoice_product.Product.id }}</td>
                <td>
                    <a href="{{ path('app_invoice_product_show', {'id': invoice_product.id}) }}">show</a>
                    <a href="{{ path('app_invoice_product_edit', {'id': invoice_product.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_invoice_product_new') }}">Create new</a>
{% endblock %}
